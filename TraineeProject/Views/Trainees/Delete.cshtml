@model TraineeProject.Models.Trainee
@{
    ViewData["Title"] = "Delete";
}

<div class="card col-6 offset-3 mt-2">
    <h3 class="card-header display-4 text-center bg-danger-subtle mt-2">Are you sure you want to delete this Trainee?</h3>
</div>
<div>
    <h4>Trainee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-bold fs-5">
            @Html.DisplayNameFor(model => model.TraineeId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TraineeId)
        </dd>

        <dt class="col-sm-2 fw-bold fs-5">
            @Html.DisplayNameFor(model => model.TraineeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TraineeName)
        </dd>

        <dt class="col-sm-2 fw-bold fs-5">
            @Html.DisplayNameFor(model => model.TraineeEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TraineeEmail)
        </dd>

        <dt class="col-sm-2 fw-bold fs-5">
            @Html.DisplayNameFor(model => model.TraineeContact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TraineeContact)
        </dd>

        <dt class="col-sm-2 fw-bold fs-5">
            @Html.DisplayNameFor(model => model.Batch.BatchCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Batch.BatchCode)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TraineeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Batch" class="btn btn-outline-warning btn-sm"><i class="fa fa-arrow-circle-left"></i>>Back to List</a>
    </form>
</div>

