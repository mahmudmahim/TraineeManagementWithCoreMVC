@model IEnumerable<TraineeProject.Models.Trainee>
@{
    ViewData["Title"] = "Index";
}


<div class="row mt-2">
    <div class="col">
        <div class="card col-6 offset-3 mt-2">
            <h4 class="card-header fw-bold fs-4">All Trainees</h4>
        </div>
        <div class="d-flex justify-content-end">
            <a asp-action="Create" asp-controller="Trainees" class="btn btn-outline-primary btn-sm fs-5"><i class="fa fa-plus-circle"></i> Add New</a>
        </div>
    </div>
    <table class="table table-bordered table-striped table-sm mt-2">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=>x.TraineeName)</th>
                <th>@Html.DisplayNameFor(x=>x.TraineeEmail)</th>
                <th>@Html.DisplayNameFor(x=>x.TraineeContact)</th>
                <th>Batch</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x=>item.TraineeName)</td>
                    <td>@Html.DisplayFor(x=>item.TraineeEmail)</td>
                    <td>@Html.DisplayFor(x=>item.TraineeContact)</td>
                    <td>@Html.DisplayFor(x=>item.Batch.BatchCode)</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Trainees" asp-route-id="@item.TraineeId" class="btn btn-outline-info"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" asp-controller="Trainees" asp-route-id="@item.TraineeId" class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

